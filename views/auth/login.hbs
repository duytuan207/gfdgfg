{{>head}}
<style>
    .admin {
        background-image: none;
    }

    .main-content {
        background-color: none;
        background-image: url(../themes/admin/images/bg-auth.png);
    }
</style>

<body>
    <main class="main-content">
        <div class="admin">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-xxl-3 col-xl-4 col-md-6 col-sm-8">
                        <div class="edit-profile">
                            <div class="card">
                                <div class="card-header" style="min-height: 0">
                                    <div class="edit-profile__title">
                                        <strong><i class="fa fa-user-secret" aria-hidden="true"></i> ĐĂNG NHẬP HỆ THỐNG
                                            <i class="fa fa-user-secret" aria-hidden="true"></i></strong>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="edit-profile__body form-auth">
                                        <div class="form-group">
                                            <label>Tên Đăng Nhập</label>
                                            <input type="text" class="form-control" name="username"
                                                placeholder="Nhập tên đăng nhập">
                                        </div>
                                        <div class="form-group">
                                            <label>Mật Khẩu</label>
                                            <div class="position-relative">
                                                <input type="password" class="form-control" name="password"
                                                    placeholder="Nhập mật khẩu">
                                                <div
                                                    class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2">
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="admin__button-group button-group d-flex pt-1 justify-content-md-start justify-content-center">
                                            <button
                                                class="btn btn-primary btn-default w-100 btn-squared text-capitalize lh-normal px-50 signIn-createBtn">
                                                Đăng Nhập
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <div id="overlayer">
        <div class="loader-overlay">
            <div class="dm-spin-dots spin-lg">
                <span class="spin-dot badge-dot dot-primary"></span>
                <span class="spin-dot badge-dot dot-primary"></span>
                <span class="spin-dot badge-dot dot-primary"></span>
                <span class="spin-dot badge-dot dot-primary"></span>
            </div>
        </div>
    </div>
    <div class="enable-dark-mode dark-trigger">
        <ul>
            <li>
                <a href="#">
                    <i class="uil uil-moon"></i>
                </a>
            </li>
        </ul>
    </div>

    <script src="../themes/admin/js/plugins.min.js"></script>
    <script src="../themes/admin/js/script.min.js"></script>
    <script src="../themes/clipboard.js"></script>
    <script src="../themes/axios.min.js"></script>
    <script src="../themes/socket.io.js"></script>
    <script src="../themes/admin/js/app.min.js"></script>